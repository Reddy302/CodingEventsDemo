<!--Events.Edit.cshtml-->
<h1>@ViewBag.Title</h1>

<form method="post" action="/events/edit">
    <input type="hidden" value="@ViewBag.eventToEdit.Id" name="eventId" />
    <div class="form-group">
        <label for="name">Name:</label><br />
        <input name="name" id="name" type="text" value="@ViewBag.eventToEdit.Name"/>
    </div>
    <div class="form-group">
        <label for="description">Description:</label><br />
        <textarea name="description" id="desc" rows="5" cols="30">@ViewBag.eventToEdit.Description</textarea>
    </div>
    <input type="submit" value="Edit Event" />
</form>